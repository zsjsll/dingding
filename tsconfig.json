{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "lib": ["es2022", "DOM"],
    "target": "ES5",
    "allowJs": false,
    "typeRoots": ["./node_modules/@sm003/autojs6-dts/declarations", "./node_modules/@types", "types"],

    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["module/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  },
  "exclude": ["node_modules"]
}
